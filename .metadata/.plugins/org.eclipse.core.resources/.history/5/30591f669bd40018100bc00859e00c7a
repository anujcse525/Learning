package com.anuj.threadlocal;

public class MyRunnable implements Runnable {

	private String name;

	public MyRunnable(String name) {
		this.name = name;
	}

	private ThreadLocal<String> th = new ThreadLocal<String>() {
		protected String intialValue() {
			return "This is Initial Value";
		}
	};

	public void run() {
		th.set(name + " -- Anuj");

		try {
			Thread.sleep(2L * 1000);
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
		System.out.println(th.get());
	}

}
