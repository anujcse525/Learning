package com.anuj.eggproblem;

public class EggProblem {

	public static int calculateAttemts(int eggs, int floors) {

		int[][] result = new int[eggs + 1][floors + 1];
		int temp = 0;
		for (int i = 0; i < floors; i++) {
			result[1][i] = i;
		}

		for (int eg = 2; eg <= eggs; eg++) {
			for (int fl = 1; fl < floors; fl++) {
				result[eg][fl] = Integer.MAX_VALUE;
				for (int k = 1; k <= fl; k++) {
					temp = 1 + Math.max(result[eg - 1][fl - 1], result[eg][fl - k]);
					if (temp < result[eg][fl]) {
						result[eg][fl] = temp;
					}
				}
			}
		}
		return result[eggs][floors];
	}

	public static void main(String[] args) {
System.out.println(calculateAttemts(2, 100));
	}

}
