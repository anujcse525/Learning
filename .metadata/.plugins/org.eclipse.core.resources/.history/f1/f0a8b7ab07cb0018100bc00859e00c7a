package com.anuj.perfios;

import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class DiceRoller {

	public static void main(String[] args) {

		if (args.length < 2) {
			System.out.println("Usage diceRoller <NumberOfDice>D<NumberOfSides> <NumberOfDice>D<NumberOfSides>");
		}
		System.out.println(args[0] + " " + args[1]);
		String firstDice = args[0];
		String secondDice = args[1];
		String regex = "^\\d+D(4|6|8|10|12|20)$";
		Pattern pattern = Pattern.compile(regex);
		Matcher matcher = pattern.matcher(firstDice);
		System.out.println(matcher.matches());
		matcher = pattern.matcher(secondDice);
		System.out.println(matcher.matches());
	}

}
